<% content_for :custom_css do %>
  <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
  <link rel="stylesheet" href="/resources/demos/style.css">
<% end %>

<% content_for :content do %>

<div class="main-body">
  <div class="page-wrapper">
    <!-- Page-body start -->
    <div class="page-body">
      <div class="row">
        <div class="col-lg-12 mx-auto">
          <div class="card">

            <div class="card-body">

              <div style="padding: 40px;">
                <div class="card-title">
                   <h5 class="mb-3 mb-sm-0 text-uppercase text-dark" style="padding-bottom: 30px;">

                    <%= link_to "<i class='fa fa-reply'></i>back to tours".html_safe,"/tours?pid=#{@artist.id}", class: "mb-3 mb-sm-0 text-uppercase text-dark" %>
                  </h5>

                  <h6 class="mb-3 mb-sm-0 text-uppercase">New Tour</h6>
                </div>
                <hr>
                <form id="the_form" class="form-material" action="/tours" method="post">
                  <div class="form-group form-group-art position-relative mb-4">
                    <label>Artist name</label>
                    <div class="form-group-inner d-inline-block w-100">
                      <input type="text" name="name" class="form-control" value="<%= (@artist.first_name.to_s+ " "+ @artist.last_name.to_s) if @artist.present? %>" readonly="readonly">
                      <span class="form-bar"></span>
                    </div>
                  </div>
                  <input type="hidden" name="artist_id" value="<%= (@artist.id) if @artist.present? %>">
                  <div class="form-group form-group-art position-relative mb-4">
                    <label>Tour name</label>
                    <div class="form-group-inner d-inline-block w-100">
                      <input type="text" name="name" class="form-control" placeholder="Name of the tour..." required="" value="">
                      <span class="form-bar"></span>
                    </div>
                  </div>
                  <div class="form-group form-group-art position-relative mb-4">
                    <label>Door Time</label>
                    <div class="form-group-inner d-inline-block w-100">
                      <input type="text" name="door_time" class="form-control hasDatepicker" id="datepicker" placeholder="Door Time of tour." required="" value="">
                      <span class="form-bar"></span>
                    </div>
                  </div>
                  <div class="form-group form-group-art position-relative mb-4">
                    <label>Show Time</label>
                    <div class="form-group-inner d-inline-block w-100">
                      <input type="text" name="show_time" class="form-control hasDatepicker" id="datepicker" placeholder="Show Time of tour" required="" value="">
                      <span class="form-bar"></span>
                    </div>
                  </div>
                  <div class="form-group form-group-art position-relative mb-4">
                    <label>Ticket Price</label>
                    <div class="form-group-inner d-inline-block w-100">
                      <input type="number" name="ticket_price" class="form-control" placeholder="Ticket Price" required="" value="">
                      <span class="form-bar"></span>
                    </div>
                  </div>

                  <div id="nestable-menu" class="form-group mt-4 mb-0">
                    <button type="submit" id="btn-create" class="btn btn-dark py-3 px-5">Create it...</button>
                  </div>
                </form>
            </div>
            </div>
          </div>
          <!-- Inline editable card start -->
        </div>
      </div>
    </div>
    <!-- Page-body end -->
  </div>
</div>
<!-- Main body end -->
<% end %>


  <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
  <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

<% content_for :custom_js do %>
<script type="text/javascript" src="/files/assets/pages/jquery.filer/js/jquery.filer.min.js"></script>
<script type="text/javascript" src="/vendor/jquery-validation-1.17.0/jquery.validate-1.17.0.js"></script>
<% end %>

<script type="text/javascript">
    $( function() {
      $( "#datepicker" ).datepicker();
    } );
</script>