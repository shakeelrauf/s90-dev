<% content_for :custom_css do %>

<% end %>



<% content_for :content do %>

<div class="main-body">
  <div class="page-wrapper">
    <!-- Page-body start -->
    <div class="page-body">
      <div class="row">
        <div class="col-lg-12 mx-auto">
          <div class="card">

            <div class="card-body">

              <div style="padding: 40px;">
                <div class="card-title">
                  <h5 class="mb-3 mb-sm-0 text-uppercase text-dark" style="padding-bottom: 30px;">
                    <%= link_to "<i class='fa fa-reply'></i>back to release".html_safe,"/al/my/#{params[:pid]}", class: "mb-3 mb-sm-0 text-uppercase text-dark" %>
                  </h5>

                  <h6 class="mb-3 mb-sm-0 text-uppercase">Release details</h6>
                </div>
                <hr>
                <form id="the_form" class="form-material" action="/album/creater/<%= @pid %>" method="post">
                  <div class="form-group form-group-art position-relative mb-4">
                    <label>Artist name</label>
                    <div class="form-group-inner d-inline-block w-100">
                      <p class="form-control"><%= (@artist.first_name.to_s+ " "+ @artist.last_name.to_s) if @artist.present? %></p>
                      <span class="form-bar"></span>
                    </div>
                  </div> <div class="form-group form-group-art position-relative mb-4">
                    <label>Release name</label>
                    <div class="form-group-inner d-inline-block w-100">
                      <input type="text" name="field_name" class="form-control" placeholder="Name of the song, LP, EP, ..." required="" value="">
                      <span class="form-bar"></span>
                    </div>
                  </div>
                  <div class="form-group form-group-art position-relative mb-4">
                    <label>Release year</label>
                    <div class="form-group-inner d-inline-block w-100">
                      <input type="number" name="field_year" class="form-control" placeholder="2018" required="" value="">
                      <span class="form-bar"></span>
                    </div>
                  </div>

                  <div id="nestable-menu" class="form-group mt-4 mb-0">
                    <button type="submit" id="btn-create" class="btn btn-dark py-3 px-5">Create it...</button>
                  </div>
                </form>
            </div>
            </div>
          </div>
          <!-- Inline editable card start -->
        </div>
      </div>
    </div>
    <!-- Page-body end -->
  </div>
</div>
<!-- Main body end -->
<% end %>

<% content_for :custom_js do %>
<script type="text/javascript" src="/files/assets/pages/jquery.filer/js/jquery.filer.min.js"></script>
<script type="text/javascript" src="/vendor/jquery-validation-1.17.0/jquery.validate-1.17.0.js"></script>
<% end %>
