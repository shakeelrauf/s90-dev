
<div class="card card-authentication1 mx-auto my-5 bg-dark animated rollIn">
  <div class="card-body">
   <div class="card-content p-2">
    <div class="card-title text-uppercase text-center pb-2 text-white">Reset Password</div>
      <p class="text-center pb-2 text-white">Please enter your email address. You will receive a link to create a new password via email.</p>
      <%= form_tag forgot_reset_path , class: "color-form" do %>
      <div class="form-group">
       <div class="position-relative has-icon-left">
        <label for="exampleInputEmailAddress" class="sr-only">Email Address</label>
        <%= email_field_tag "field_username" ,"", class: "form-control" ,placeholder: "Email Address" %>
        <div class="form-control-position">
          <i class="icon-envelope-open"></i>
        </div>
       </div>
      </div>
     
      <%= submit_tag "Reset Password", class: "btn btn-danger btn-block waves-light mt-3" %>
      <div class="text-center pt-3">
      <hr class="border-secondary">
      <p class="text-white">Return to the <%= link_to "Sign In" , login_path %></p>
      </div>
     <% end %>
     </div>
  </div>
</div>

 <!--Start Back To Top Button-->
<a href="javaScript:void();" class="back-to-top"><i class="fa fa-angle-double-up"></i> </a>
