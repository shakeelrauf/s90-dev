
  <div class="card card-authentication1 mx-auto my-5 animated zoomIn bg-dark">
    <div class="card-body">
     <div class="card-content p-2">
      <div class="text-center">
        <%= image_tag asset_path("logo-icon") %>
      </div>
      <div class="card-title text-uppercase text-center py-2 text-white">Sign In</div>
        <%= form_tag(auth_path , class: "color-form") do %>
          
        <div class="form-group">
         <div class="position-relative has-icon-left">
          <label for="exampleInputUsername" class="sr-only">Email</label>
          <%= email_field_tag :field_email,"", id: "exampleInputUsername",placeholder: "Email", class: "form-control" %>
          <div class="form-control-position">
            <i class="icon-user"></i>
          </div>
         </div>
        </div>
        <div class="form-group">
         <div class="position-relative has-icon-left">
          <label for="exampleInputPassword" class="sr-only">Password</label>

          <%= password_field_tag :field_pw, "", id: "exampleInputPassword", placeholder: "Password", label: false, class: "form-control" %>
          <div class="form-control-position">
            <i class="icon-lock"></i>
          </div>
         </div>
        </div>
      <div class="form-row mr-0 ml-0">
       <div class="form-group col-6">
         <div class="demo-checkbox">
                <input type="checkbox" id="user-checkbox" class="filled-in chk-col-danger" checked="" />
                <label for="user-checkbox">Remember me</label>
        </div>
       </div>
       <div class="form-group col-6 text-right">
        <%= link_to "Reset Password", forgot_pw_path %>
       </div>
      </div>
      
       <div class="form-group">
          <%= submit_tag 'Sign In', class: "btn btn-danger btn-block  waves-light" %>
       </div>
        <div class="form-group text-center">
         <p class="text-white">Not a Member ? <a href="<%= signup_path %>"> Sign Up here</a></p>
       </div>
       <div class="form-group text-center">
          <hr class="border-secondary">
        <h5 class="text-white">OR</h5>
       </div>
        <div class="form-group text-center">
        <button type="button" id="connect" class="btn btn-facebook text-white btn-block waves-effect waves-light"><i class="fa fa-facebook"></i> Sign In With facebook</button>


        </div>
        <% end %>
       </div>
      </div>
       </div>
    
     <!--Start Back To Top Button-->
    <a href="javaScript:void();" class="back-to-top"><i class="fa fa-angle-double-up"></i> </a>
    <!--End Back To Top Button-->
  </div><!--wrapper-->
  <%= render partial: 'fb_auth' %>