<% content_for :custom_css do %>
<link rel="stylesheet" type="text/css" href="/files/assets/pages/foo-table/css/footable.bootstrap.min.css">
<link rel="stylesheet" type="text/css" href="/files/assets/pages/foo-table/css/jquery.dataTables.min.css">
<link rel="stylesheet" type="text/css" href="/files/assets/pages/foo-table/css/footable.standalone.min.css">
<% end %>


<% content_for :content do %>
<div class="main-body">
  <div class="page-wrapper">
    <!-- Page-body start -->
    <div class="page-body">
      <!-- Filtering Foo-table card start -->
      <div class="card">
        <div class="card-header d-flex align-items-sm-center justify-content-between flex-column flex-sm-row">
          <h6 class="mb-3 mb-sm-0 text-uppercase">All of the artists</h6>
          <div id="nestable-menu" class="m-b-10">
            <%= link_to "New artist", manager_artist_new_path, :id => "open-contacts-dialog-btn",
              :class => "btn btn-dark waves-effect waves-light w-100", :method => :get %>
          </div>
        </div>
        <div class="card-body card-body-artists">
          <div class="table-responsive">
            <table id="table-artists" class="table table-dark table-dark-set table-column-five table-striped shadow-dark mb-0">
              <thead>
                <tr>
                  <th>ID</th>
                  <th>Name</th>
                  <th>Status</th>
                  <th></th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                <% @artists.each.with_index do |a,i| %>
                <tr>
                  <td><%= i+1 %></td>
                  <td><a href="/p/p/<%= a.id %>"><%= a.name %></a></td>
                  <td><span class="tag tag-danger">Active</span></td>
                  <td>
                    <button class="btn btn-link btn-white btn-albums"
                    data-artist="<%= a.id %>">
                    Albums
                  </button>
                </td>
                <td>
                   <% if a.email.present? %>
                  <button class="btn btn-link btn-white btn-reinitial" data-tooltip="Click Here"
                  data-artist="<%= a.id %>">
                  Reinitialized Passsword
                </button>
                <% end %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <!-- Filtering Foo-table card end -->
  </div>
  <!-- Page-body end -->
</div>
</div>
<div id="popup" class="popup-box">
     
</div>


<% end %>

<% content_for :custom_js do %>
<!--FOO Table js-->

<script src="/s92/js/pages/ad/all.js" type="text/javascript" ></script>
<script src="/files/assets/pages/foo-table/js/footable.min.js"></script>
<%= javascript_include_tag 'popper.min.js'%>
<% end %>
