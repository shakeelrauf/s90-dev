<!--profile cover start-->
<div class="row">
    <div class="col-lg-12">
        <div class="cover-profile">
            <div class="profile-bg-img">
                <img class="profile-bg-img img-fluid" src="/files/assets/images/user-profile/bg-img1.jpg" alt="bg-img">
                <div class="card-block user-info">
                    <div class="col-md-12">
                        <div class="media-left">
                            <a href="#" class="profile-image">
                                <!--
                                <img class="user-img img-radius" src="/files/assets/images/user-profile/user-img.jpg" alt="user-img">
                                -->
                                <%
                                puts "=======> 4 #{@p.name}"
                                puts "=======> 4 #{@p.profile_pic_url}"
                                if (@p.present? && @p.profile_pic_url.present?)
                                  u = @p.profile_pic_url
                                  puts "========> 1 #{u}"
                                else
                                  u = "/files/assets/images/avatar-4.jpg"
                                  puts "========> 2 #{u}"
                                end %>
                                <img class="user-img img-radius" src="<%= u %>" alt="user-img" style="width:100px;height:100px">
                            </a>
                        </div>
                        <div class="media-body row">
                            <div class="col-lg-12">
                                <div class="user-title">
                                    <h2><%= @p.name %></h2>
                                    <span class="text-white">Artist</span>
                                </div>
                            </div>
                            <div>
                                <div class="pull-right cover-btn">
                                    <button type="button" class="btn btn-primary m-r-10 m-b-10"><i class="icofont icofont-plus"></i> Follow</button>
                                    <button type="button" class="btn btn-primary m-b-10"><i class="icofont icofont-ui-messaging"></i> Message</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--profile cover end-->
