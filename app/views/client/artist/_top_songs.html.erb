<div class="wrapper"  id="shuffle">
  <div class="intro-alt search-intro-overview">
    <div class="container">
      <%= render partial: 'artist_intro', locals: {artist: @artist, songs: @songs, duration: @duration} %>


      <div class="intro__body">
        <%= render partial: 'menu', locals: {artist: @artist, page: 'top_songs'} %>

      </div><!-- /.intro__body -->
    </div><!-- /.container -->
  </div><!-- /.intro-alt -->

  <div class="section-ordinary decoration-dark-gradient  pb-5 mb-5">
    <div class="container">
      <div class="section__body">
        <div class="songs songs--alt">
          <div class="songs__head">
            <ul>
              <li>
                Title
              </li>

              <li>
                Artist
              </li>

              <li>
                Album
              </li>

              <li>
                Genre
              </li>

              <li>
                Time
              </li>

              <li>
                Credits
              </li>
            </ul>
          </div><!-- /.songs__head -->
          <% @top_songs.each do |song| %>
            <%= render partial: 'client/songs/song_with_full_width', locals: {song: song} %>
          <% end %>
        </div><!-- /.songs -->
      </div><!-- /.section__body -->
    </div><!-- /.container -->
  </div><!-- /.section-ordinary decoration-dark-gradient -->

</div><!-- /.wrapper -->
<%= render partial: 'client/shared/playable_song_js' %>

  <script type="text/javascript" charset="utf-8">
      var songs = <%= @top_songs.to_json.to_s.html_safe  %>;
     
      $("#shuffle_9").click(function () {
          $.ajax({
              data : { shuffle : true },
              url: '/client/artist/'+ <%= @artist['id'] %> +'/top_songs',
              success: function(res){
                  $("#shuffle").html(res)
              }
          })
      });
  </script>