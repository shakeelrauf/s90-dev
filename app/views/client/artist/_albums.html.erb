<div class="wrapper" id="shuffle">
  <div class="intro-alt" style="background-image: url(<%= image_url('client/temp/intro-overview.jpg') %>);">
    <div class="container">
      <%= render partial: 'artist_intro', locals: {artist: @artist, songs: @songs, duration: @duration} %>

      <div class="intro__body">
        <%= render partial: 'menu', locals: {artist:  @artist, page: 'albums'} %>
      </div><!-- /.intro__body -->
    </div><!-- /.container -->
  </div><!-- /.intro-alt -->

  <div class="section-ordinary decoration-dark-gradient  pb-5 mb-5">
    <div class="container">
      <div class="section__body">
        <div class="tiles tiles--big">
          <% @albums.each do |al| %>
            <%= render partial: 'client/shared/album',locals:  {al: al} %>
          <% end %>
        </div><!-- /.tiles -->
      </div><!-- /.section__body -->
    </div><!-- /.container -->
  </div><!-- /.section-ordinary decoration-dark-gradient -->
</div><!-- /.wrapper -->

<script type="text/javascript">
  
  $("#shuffle_11").click(function () {
      $.ajax({
          data : { shuffle : true },
          url: '/artist/'+ <%= @artist['id'] %> +'/albums',
          success: function(res){
              $("#shuffle").html(res)
          }
      })
  });
</script>