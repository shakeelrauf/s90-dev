<div class="wrapper" id="shuffle">
  <div class="intro-alt" style="background-image: url('<%= image_url 'client/temp/intro-library-playlist.jpg' %>');">
    <div class="container">
      <%= render partial: 'artist_intro', locals: {artist: @artist, songs: @songs, duration: @duration} %>


      <div class="intro__body">
        <%= render partial: 'menu', locals: {artist: @artist, page: 'playlists'} %>

      </div><!-- /.intro__body -->
    </div><!-- /.container -->
  </div><!-- /.intro-alt -->

  <div class="section-ordinary decoration-dark-gradient  pb-5 mb-5">
    <div class="container">
      <div class="section__body">
        <div class="tiles playlists tiles--big">
          <% @playlists.each do |playlist| %>
            <%= render partial: 'client/shared/playlist', locals: {playlist: playlist} %>
          <% end %>
        </div><!-- /.tiles -->
      </div><!-- /.section__body -->
    </div><!-- /.container -->
  </div><!-- /.section-ordinary decoration-dark-gradient -->

</div><!-- /.wrapper -->


<script type="text/javascript" charset="utf-8">
  $("#shuffle_12").click(function () {
      $.ajax({
          data : { shuffle : true },
          url: '/artist/'+ <%= @artist['id'] %> +'/playlists',
          success: function(res){
              $("#shuffle").html(res)
          }
      })
  });
</script>