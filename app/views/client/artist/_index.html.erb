  <div class="wrapper" id="shuffle">
    <div class="intro-alt" style="background-image: url(<%= image_url 'client/temp/intro-library-playlist.jpg' %>);">
      <div class="container">
        <div class="intro__head intro__head--alt">
          <h1>

            <%= t("client.albums.artist_overview.p1") %>
          </h1>

          <div class="intro__icons">
            <ul class="list-icons">
              <li>
                <a href="#">
                  <i class="icon-play"></i>
                </a>
              </li>
              
              <li id="shuffle_15">
                <a>
                  <i class="icon-two-arrows"></i>
                </a>
              </li>
              
              <li>
                <a href="#">
                  <i class="icon-plus"></i>
                </a>
              </li>
            </ul><!-- /.list-icons -->
          </div><!-- /.intro__icons -->
        </div><!-- /.intro__head -->

        <div class="intro__body">
          <ul class="list-btns">
            
            <li>
              <a href="/songs/all_songs" class="btn btn--block ajaxLink"><%= t("client.common.p6") %></a>
            </li>

            <li>
              <a href="/my_playlists" class="btn btn--block ajaxLink"><%= t("client.common.p7") %></a>
            </li>
            
            <li>
              <a href="/artist" class="btn btn--block current ajaxLink"><%= t("client.common.p8") %></a>
            </li>        
          </ul><!-- /.list-btns -->
        </div><!-- /.intro__body -->
      </div><!-- /.container -->
    </div><!-- /.intro-alt -->

    <div class="section-ordinary decoration-dark-gradient  pb-5 mb-5">
      <div class="container">
        <div class="section__body">
          <div class="row">
            <% @artists.each do |artist| %>
              <div class="col-xl-2 col-lg-3 col-md-4 col-6">
                <div class="artist">
                  <div class="artist__image">
                    <a href="<%= artist_overview_artist_path(artist.id) %>" class="ajaxLink">
                    <img src="<%= artist_cover(artist) %>" alt="">
                  </div><!-- /.artist__image -->

                  <div class="artist__name">
                    <p>
                      <%= link_to "#{artist.name}", artist_overview_artist_path(artist.id) %>
                    </p>
                  </div><!-- /.artist__name -->
                </div><!-- /.artist -->
              </div><!-- /.col-xl-2 col-lg-3 col-md-4 col-6 -->
            <% end %>

          </div><!-- /.row -->
        </div><!-- /.section__body -->
      </div><!-- /.container -->
    </div><!-- /.section-ordinary decoration-dark-gradient -->
  </div><!-- /.wrapper -->

  <script type="text/javascript" charset="utf-8">
    $("#shuffle_15").click(function () {
        $.ajax({
            data : { shuffle : true },
            url: '/artist',
            success: function(res){
                $("#shuffle").html(res)
            }
        })
    });
  </script>
