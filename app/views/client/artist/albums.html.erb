<div class="wrapper">
  <%= render partial: "client/shared/header" %>
  <div class="intro-alt" style="background-image: url(<%= image_url('client/temp/intro-overview.jpg') %>);">
    <div class="container">
      <div class="intro__head intro__head--alt">
        <h1>
          <%= @albums[0].present? ? @albums[0]['name'] : '' %>
        </h1>
        <div class="intro__icons">
          <ul class="list-icons">
            <li>
              <a href="#" class="play-album" data-url="<%= songs_client_album_path(@albums[0]['id']) if @albums[0].present? %>" data-id="<%= @albums[0].present? ? @albums[0]['id'] : '' %>">
                <i class="icon-play"></i>
              </a>
            </li>

            <li>
              <a href="#">
                <i class="icon-two-arrows"></i>
              </a>
            </li>

            <li>
              <a href="#">
                <i class="icon-plus"></i>
              </a>
            </li>
          </ul><!-- /.list-icons -->
        </div><!-- /.intro__icons -->
      </div><!-- /.intro__head -->

      <div class="intro__body">
        <%= render partial: 'menu', locals: {artist:  @artist, page: 'albums'} %>
      </div><!-- /.intro__body -->
    </div><!-- /.container -->
  </div><!-- /.intro-alt -->

  <div class="section-ordinary decoration-dark-gradient">
    <div class="container">
      <div class="section__body">
        <div class="tiles tiles--big">
          <% @albums.each do |al| %>
            <%= render partial: 'client/shared/album',locals:  {al: al} %>
          <% end %>
        </div><!-- /.tiles -->
      </div><!-- /.section__body -->
    </div><!-- /.container -->
  </div><!-- /.section-ordinary decoration-dark-gradient -->

</div><!-- /.wrapper -->