<div class="wrapper">
    <%= render partial: "client/shared/header" %>
  		<div class="intro-alt intro-album-detailed">
  			<div class="container">
  				<div class="intro__body">
  					<div class="song-detailed">
  						<div class="song__image">
                <%= image_tag("client/temp/tile-big-4.jpg", alt: "")%>
  						</div><!-- /.song__image -->

  						<div class="song__content">
  							<h1>
  								<%= @al["name"].to_s %>
  							</h1>
  							
  							<h2>
  								Greta Van Fleet
  							</h2>
  							
  							<p>
  								<strong>
  									Rock - <%= @al["year"] %>
  								</strong>
  							</p>
  							
  							<p>
  								<%= @songs.count %> songs - 1 hour 3 minutes
  							</p>
  							
  							<ul class="list-icons">
  								<li>
  									<a href="#">
  										<i class="icon-play"></i>
  									</a>
  								</li>
  								
  								<li>
  									<a href="#">
  										<i class="icon-two-arrows"></i>
  									</a>
  								</li>
  								
  								<li>
  									<a href="#">
  										<i class="icon-plus"></i>
  									</a>
  								</li>

  								<li>
  									<a href="#">
  										<i class="icon-hearth"></i>
  									</a>
  								</li>
  							</ul><!-- /.list-icons -->
  						</div><!-- /.song__content -->
  					</div><!-- /.song-detailed -->
  				</div><!-- /.intro__body -->
  			</div><!-- /.container -->
  		</div><!-- /.intro-alt -->

  		<div class="section-ordinary decoration-dark-gradient">
  			<div class="container">
  				<div class="section__body">
  					<div class="songs songs--alt">
  						<div class="songs__head">
  							<ul>
  								<li>
  									Title
  								</li>
  								
  								<li>
  									Artist
  								</li>
  								
  								<li>
  									Album
  								</li>
  								
  								<li>
  									Genre
  								</li>
  								
  								<li>
  									Time
  								</li>
  								
  								<li>
  									Credits
  								</li>
  							</ul>
  						</div><!-- /.songs__head -->
              <% @songs.each do |song| %>
    						<div class="song song--alt">
    							<div class="song__body">
    								<div class="song__content">
    									<div class="song__image">
    										<a href="#">
    											<i class="icon-play"></i>
    										</a>
    									</div><!-- /.song__image -->

    									<p class="song__title">
    										<strong>
    											<%= song["title"].to_s %>
    										</strong>
    									</p>

    									<p class="song__artist">
    										<%= song["artist_name"].to_s %>
    									</p>

    									<p class="song__album">
    										<%= song["album_name"].to_s %>
    									</p>

    									<p class="song__genre">
    										<%= song["artist_name"].to_s %>
    									</p><!-- /.song__genre -->

    									<p class="song__time">
    										<%= song["duration"].to_s %>
    									</p><!-- /.song__time -->

    									<div class="song__actions">
    										<div class="song__dots">
    											<span></span>

    											<span></span>

    											<span></span>
    										</div><!-- /.song__dots -->

    										<ul class="song__icons">
    											<li>
    												<a href="#">
    													<i class="icon-two-arrows"></i>
    												</a>
    											</li>

    											<li class="has-dropdown">
    												<a href="#" class="js-trigger">
    													<i class="icon-plus"></i>
    												</a>

    												<ul class="song__dropdown">
    													<li>
    														<a href="#">Add to Playlist</a>
    													</li>

    													<li>
    														<a href="#">New Playlist</a>
    													</li>

    													<li>
    														<a href="#">Add to Sessions</a>
    													</li>
    												</ul><!-- /.song__dropdown -->
    											</li>

    											<li>
    												<a href="#">
    													<i class="icon-hearth"></i>
    												</a>
    											</li>

    											<li>
    												<a href="#">
    													<i class="icon-logo-btn"></i>
    												</a>
    											</li>
    										</ul><!-- /.song__icons -->
    									</div><!-- /.song__actions -->
    								</div><!-- /.song__content -->
    							</div><!-- /.song__body -->
    						</div><!-- /.song -->
              <% end %>

  					</div><!-- /.songs -->
  				</div><!-- /.section__body -->
  			</div><!-- /.container -->
  		</div><!-- /.section-ordinary decoration-dark-gradient -->
	
</div><!-- /.wrapper -->

