<div class="wrapper">
  <div class="intro-alt search-intro-overview">
    <div class="container">
      <div class="intro__head intro__head--alt">
        <h1>
          <%= t("client.albums.album_playlist.p1") %>
        </h1>

        <div class="intro__icons">
          <ul class="list-icons">
            <li>
              <a href="#" class="playlist-songs">
                <i class="icon-play"></i>
              </a>
            </li>
            
            <li>
              <a href="#">
                <i class="icon-two-arrows"></i>
              </a>
            </li>
            
            <li>
              <a href="#">
                <i class="icon-plus"></i>
              </a>
            </li>
          </ul><!-- /.list-icons -->
        </div><!-- /.intro__icons -->
      </div><!-- /.intro__head -->

      <div class="intro__body">
        <ul class="list-btns">
          <li>
            <a href="#" class="btn btn--block">
              <%= t("client.common.p1") %>
            </a>
          </li>
          
          <li>
            <a href="#" class="btn btn--block current"><%= t("client.common.p2") %></a>
          </li>
          
          <li>
            <a href="#" class="btn btn--block"><%= t("client.common.p3") %></a>
          </li>
          
          <li>
            <a href="#" class="btn btn--block"><%= t("client.common.p4") %></a>
          </li>
        </ul><!-- /.list-btns -->
      </div><!-- /.intro__body -->
    </div><!-- /.container -->
  </div><!-- /.intro-alt -->

  <div class="section-ordinary decoration-dark-gradient  pb-5 mb-5">
    <div class="container">
      <div class="section__body">
        <div class="tiles albums  tiles--big">
          <% @albums.each do |album| %>
            <div class="tile tile--big">
              <div class="tile__inner">
                <div class="tile__image tile__image--square">
                  <a href="/albums/<%= album["id"] %>">
                    <% if album["pic"].present? %>
                      <img src="<%= album["pic"] %>" alt="">
                    <% else %>
                      <%= image_tag("client/temp/tile-big-1.jpg")%>
                    <% end %>
                  </a>

                  <div class="tile__overlay">
                    <ul class="list-icons">
                      <li>
                        <a href="#">
                          <i class="icon-play"></i>
                        </a>
                      </li>

                      <li>
                        <a href="#">
                          <i class="icon-two-arrows"></i>
                        </a>
                      </li>

                      <li>
                        <a href="#">
                          <i class="icon-plus"></i>
                        </a>
                      </li>

                      <li>
                        <a href="#">
                          <i class="icon-hearth"></i>
                        </a>
                      </li>
                    </ul><!-- /.list-icons -->
                  </div><!-- /.tile__overlay -->
                </div><!-- /.tile__image tile__image--square -->

                <div class="tile__text">
                  <p>
                    <%= album["name"].to_s %>
                  </p>
                </div><!-- /.tile-text -->
              </div><!-- /.tile__inner -->
            </div><!-- /.tile -->
          <% end %>
        </div><!-- /.tiles -->
      </div><!-- /.section__body -->
    </div><!-- /.container -->
  </div><!-- /.section-ordinary decoration-dark-gradient -->
  
</div><!-- /.wrapper -->

