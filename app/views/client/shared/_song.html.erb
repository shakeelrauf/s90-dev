<div class="song" data-json="<%= song.to_json.to_s %>">
  <div class="song__body">
    <div class="song__image song_image"  data-json="<%= song.to_json.to_s %>">
      <a href="javascript:;">
        <i class="icon-play"></i>
      </a>
    </div><!-- /.song__image -->

    <div class="song__content">
      <p>
        <strong>
          <%= song["title"] %>
        </strong>
      </p>

      <p class="song__name">
        <%= song["artist_name"].to_s + " â€“ " + song["album_name"].to_s %>
      </p>

      <p>
        <%= song["genre"] if !song["genre"].empty? %> <span>&middot;</span> 
        <%= song_duration(song["duration"])     %>

      </p>
    </div><!-- /.song__content -->
  </div><!-- /.song__body -->

  <div class="song__actions">
    <div class="song__dots">
      <span></span>

      <span></span>

      <span></span>
    </div><!-- /.song__dots -->

    <ul class="song__icons">
      <li>
        <a href="javascript:;">
          <i class="icon-two-arrows"></i>
        </a>
      </li>
          <%= render partial: 'client/songs/song_context_menu', locals: {song: song, add_session:  add_session} %>
      <li>
        <a href="javascript:;" id="like<%=song["id"] %>" class="song-likes songlike<%=song['id'] %>" data-id="<%=song['id'] %>" data-liked=<%=song['liked'] %>>
          <% if song['liked'] == true %>
            <i class="fas fa-heart"></i>
          <% else %>
            <i class="icon-hearth"></i>
          <% end %>
        </a>
      </li>

      <li>
        <a href="javascript:;">
          <i class="icon-logo-btn"></i>
        </a>
      </li>
    </ul><!-- /.song__icons -->
  </div><!-- /.song__actions -->
</div><!-- /.song -->
