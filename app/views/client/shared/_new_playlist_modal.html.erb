<div class="modal fade" id="newPlaylist" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" >
  <div class="modal-dialog" role="document">
    <div class="modal-content" style="background-color: #2c3f50;">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">New Playlist</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form id="the_form" data-aid = "<%= params["id"] %>">
          <input
            type="text"
            class="field"
            id="nameOfPlaylist"
            name="nameOfPlaylist"
            placeholder="title of playlist"
            autoComplete="off"
            />

        </form>
      </div>
      <div class="modal-footer">
        <input type="submit" value="Add" class="btn btn-secondary add-new-playlist" />
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
  $("#the_form").submit(function(e){
        e.preventDefault();
        if($("#the_form").valid()){
            var aId = $("#the_form").data("aid"),
             sId = $("#the_form").data("sid"),
                title = $("#nameOfPlaylist").val();
            addNewplaylist(title,sId,aId, function(){
                addSongToPlaylsit(sId)
            })
            $("#newPlaylist").modal("hide")
            location.reload();
        }
    })
    $(".add-new-playlist").click(function(){
        $("#the_form").submit()
    })

</script>