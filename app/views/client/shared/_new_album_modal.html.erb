<div class="modal fade" id="newAlbum" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" >
  <div class="modal-dialog" role="document">
    <div class="modal-content" style="background-color: #2c3f50;">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel"><%= t("client.common.p12")%></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form id="the_form_1" data-aid = "<%= params["id"] %>">
          <input
            type="text"
            class="field"
            id="nameOfAlbum"
            name="nameOfAlbum"
            placeholder="title of album"
            autoComplete="off"
            />
            <br>
          <input
            type="number"
            class="field"
            id="yearOfAlbum"
            name="yearOfAlbum"
            placeholder="Release Year"
            autoComplete="off"
            />
        </form>
      </div>
      <div class="modal-footer">
        <input type="submit" value="<%= t("client.common.p13")%>" class="btn btn-secondary add-new-album" />
      </div>
    </div>
  </div>
</div>