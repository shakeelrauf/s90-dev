<script type="text/javascript" charset="utf-8">
    $("#the_form").validate({
        rules: {
            nameOfPlaylist: {
                required: true
            }
        },
        submitHandler: function(){
            var sId = $("#the_form").data("sid"),
                title = $("#nameOfPlaylist").val();
            if($(this).valid()){
                addNewplaylist(title,sId, function(){
                    addSongToPlaylsit(sId)
                })
                $("#newPlaylist").modal("hide")
            }
        }
    })
</script>