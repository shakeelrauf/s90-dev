
<%= render partial: 'client/shared/list_of_playlists' %>
<%= content_for :js do %>
  <script src="/s92/js/client/player.js" ></script>
  <script type="text/javascript" charset="utf-8">
      $("#the_form").validate({
          rules: {
              nameOfPlaylist: {
                  required: true
              }
          }
      })
      $("#the_form").submit(function(e){
          e.preventDefault();
          if($("the_form").valid()){
              var sId = $("#the_form").data("sid"),
                  title = $("#nameOfPlaylist").val();
              addNewplaylist(title,sId, function(){
                  addSongToPlaylsit(sId)
              })
              $("#newPlaylist").modal("hide")
          }
      })
  </script>
<% end %>
