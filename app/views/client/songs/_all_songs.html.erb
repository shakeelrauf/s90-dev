						<ul class="list-icons">
							<li>
								<a href="#" class="playlist-songs">
									<i class="icon-play"></i>
								</a>
							</li>
							
							<li id="shuffle_4">
								<a>
									<i class="icon-two-arrows"></i>
								</a>
							</li>
							
							<li>
								<a href="#">
