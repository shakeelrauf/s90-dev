<body style="background: url(assets/images/temp/sign-up.jpg) no-repeat center/cover;">
  <div class="wrapper">
    <div class="section-form-register">
      <div class="section__inner">
        <header class="section__head">
          <a href="#" class="logo-large">
            <i class="icon-logo"></i>
          </a>

          <h3>
            Log in
          </h3>

          <p>
            You only need to do this once. Don’t worry.
          </p>
        </header><!-- /.section__head -->

  <div class="section__body">
    <div class="form-register">
      <%= form_tag(client_login_path , class: "color-form") do %>
        <div class="form__section">
          <div class="form__row">
            <label for="emailOrUser" class="hidden"></label>
            <%= email_field_tag :field_email,"", id: "exampleInputUsername",placeholder: "Email", class: "field", :required => true %>
            <!-- <input type="text" class="field" id="emailOrUser" placeholder="E-mail or username"> -->
          </div><!-- /.form__row -->

          <div class="form__row">
            <label for="password" class="hidden"></label>
            <%= password_field_tag :field_pw, "", id: "exampleInputPassword", placeholder: "Password", label: false, class: "field", :required => true %>
            <!-- <input type="password" class="field" id="password" placeholder="Password"> -->
          </div><!-- /.form__row -->

          <div class="form__row">
            <%= submit_tag 'Log in', class: "btn btn--block form__btn" %>
            <!-- <button class="btn btn--block form__btn" value="GO" type="submit">Log in</button> -->
          </div><!-- /.form__row -->

          <div class="form__row">
            <a href="#" class="btn btn--block">
              Log in with Facebook
            </a>
          </div><!-- /.form__row -->

          <div class="form__row">
            <div class="form__controls">
              <div class="checkbox">
                <input type="checkbox" id="rememberMe">

                <label for="rememberMe">Remember me</label>
              </div><!-- /.checkbox -->

              <a href="#" class="form__forgot-password">
                Forgot password?
              </a>
            </div><!-- /.form__controls -->
          </div><!-- /.form__row -->
        </div><!-- /.form__section -->

        <div class="form__section">
          <h4>
            Don’t have an account?
          </h4>

          <a href="/client/sign_up" class="btn btn--block">
            Sign up
          </a>
        </div><!-- /.form__section -->
      <% end %>
    </div><!-- /.form-register -->
  </div><!-- /.section__body -->
</div><!-- /.section__inner -->

<footer class="section__foot">
  <div class="container">
    <p>
      We promise we won’t share your personal information with anyone lorem ipsum dolor sit amet, consectetuer adipiscing elit, sed diam nonummy nibh euismod tincidunt ut laoreet dolore magna aliquam erat volutpat. Ut wisi enim ad minim veniam, quis nostrud exerci tation ullam
    </p>
  </div><!-- /.container -->
</footer>
    </div><!-- /.section-form-register -->
  </div><!-- /.wrapper --><!-- /.section__foot -->
<% content_for :js do %>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="/s92/js/client/bundle.js" type="text/javascript" ></script>
<% end %>
