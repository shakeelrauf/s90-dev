	<div class="wrapper" id="shuffle">
		<div class="intro-alt" style="background-image: url('<%= image_url 'client/temp/intro-library-playlist.jpg' %>');">
			<div class="container">
				<div class="intro__head intro__head--alt">
					<h1>
						<%= t("client.albums.artist_overview.p1") %>
					</h1>

					<div class="intro__icons">
						<ul class="list-icons">
							<li>
								<a href="#" class="playlist-songs">
									<i class="icon-play"></i>
								</a>
							</li>
							
							<li id="shuffle_4">
								<a>
									<i class="icon-two-arrows"></i>
								</a>
							</li>
							
							<li>
								<a href="#">
									<i class="icon-plus"></i>
								</a>
							</li>
						</ul><!-- /.list-icons -->
					</div><!-- /.intro__icons -->
				</div><!-- /.intro__head -->

				<div class="intro__body">
					<ul class="list-btns">
						<li>
							<a href="/my_playlists" class="btn btn--block ajaxLink"><%= t("client.common.p7") %></a>
						</li>
						
						<li>
							<a href="/my_artists" class="btn btn--block current ajaxLink"><%= t("client.common.p8") %></a>
						</li>
						
						<li>
							<a href="/my_songs" class="btn btn--block ajaxLink"><%= t("client.common.p6") %></a>
						</li>
					</ul><!-- /.list-btns -->
				</div><!-- /.intro__body -->
			</div><!-- /.container -->
		</div><!-- /.intro-alt -->

		<div class="section-ordinary decoration-dark-gradient  pb-5 mb-5">
			<div class="container">
				<div class="section__body">
					<div class="songs songs--alt">
						<div class="songs__head">
							<ul>
								<li>
									Title
								</li>
								
								<li>
									Artist
								</li>
								
								<li>
									Album
								</li>
								
								<li>
									Genre
								</li>
								
								<li>
									Time
								</li>
								
								<li>
									Credits
								</li>
							</ul>
						</div><!-- /.songs__head -->
						<% @songs.each do |song| %>
						  <%= render partial: 'client/songs/song_with_full_width' , locals: {song: song, add_session: true}%>
						<% end %>
						</div><!-- /.song -->
					</div><!-- /.songs -->
				</div><!-- /.section__body -->
			</div><!-- /.container -->
		</div><!-- /.section-ordinary decoration-dark-gradient -->
		
	</div><!-- /.wrapper -->

  <script type="text/javascript" charset="utf-8">
    songs = <%= @songs.to_json.to_s.html_safe  %>;
  
	  $("#shuffle_4").click(function () {
	    $.ajax({
	      data : { shuffle : true },
	      url: '/my_songs',
	      success: function(res){
	        $("#shuffle").html(res)
	      }
	    })
	  });
  </script>
  <%= render partial: 'client/shared/playable_song_js' %>
