	<div class="wrapper" id="shuffle">
		<div class="intro-alt" style="background-image: url('<%= image_url 'client/temp/intro-library-playlist.jpg' %>');">
			<div class="container">
				<div class="intro__head intro__head--alt">
					<h1>
						<%= t("client.albums.artist_overview.p1") %>
					</h1>

					<div class="intro__icons">
						<ul class="list-icons">
							<li>
								<a href="#">
									<i class="icon-play"></i>
								</a>
							</li>
							
							<li id="shuffle_3">
								<a>
									<i class="icon-two-arrows"></i>
								</a>
							</li>
							
							<li>
								<a href="javascript:;" data-toggle="modal" data-target="#newPlaylist" class="F" >
									<i class="icon-plus"></i>
								</a>
							</li>
						</ul><!-- /.list-icons -->
					</div><!-- /.intro__icons -->
				</div><!-- /.intro__head -->

				<div class="intro__body">
					<ul class="list-btns">
						<li>
							<a href="/my_playlists" class="btn btn--block ajaxLink"><%= t("client.common.p7") %></a>
						</li>
						
						<li>
							<a href="/my_artists" class="btn btn--block current ajaxLink"><%= t("client.common.p8") %></a>
						</li>
						
						<li>
							<a href="/my_songs" class="btn btn--block ajaxLink"><%= t("client.common.p6") %></a>
						</li>
					</ul><!-- /.list-btns -->
				</div><!-- /.intro__body -->
			</div><!-- /.container -->
		</div><!-- /.intro-alt -->

	<div class="section-ordinary decoration-dark-gradient  pb-5 mb-5">
			<div class="container">
				<div class="section__body">
					<div class="tiles playlists tiles--big">
						<div class="tile tile--big tile--text">
							<div class="tile__inner">
								<div class="tile__image tile__image--square" style="cursor: pointer;">
									<h2 href="javascript:;" data-toggle="modal" data-target="#newPlaylist" class="F" >
										New <br> Playlist
									</h2>
								</div><!-- /.tile__image tile__image--square -->

							</div><!-- /.tile__inner -->
						</div><!-- /.tile -->
						<% @playlists.each do |playlist| %>
              <%= render partial: 'client/shared/playlist', locals: {playlist: playlist} %>
						<% end %>
					</div><!-- /.tiles -->
				</div><!-- /.section__body -->
			</div><!-- /.container -->
		</div><!-- /.section-ordinary decoration-dark-gradient -->

	</div><!-- /.wrapper -->


<script type="text/javascript">
  $("#shuffle_3").click(function () {
    $.ajax({
      data : { shuffle : true },
      url: '/my_playlists',
      success: function(res){
        $("#shuffle").html(res)
      }
    })
  });
</script>