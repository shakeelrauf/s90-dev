<div class="section-ordinary">
  <div class="container">

    <header class="section__head">
      <h3>
        <%= t("client.dashboard.top_songs.p1") %>
      </h3>
    
      <a href="/songs/all_songs" class="link ajaxLink">
        <%= t("client.dashboard.p3") %>
      </a>
    </header><!-- /.section__head -->
    
    <div class="section__body">
      <div class="songs songs-list" data-list="<%=most_played.to_json.to_s %>">
        <div class="song__cols slider-songs">
          <div class="song__col">
            <% most_played.each_with_index do |song, ind| %>
              <% if ind <= 4 %>
                <%= render partial:  'client/shared/song', locals: {song: song, ind: ind, add_session: true} %>
              <% end %>
            <% end %>
          </div><!-- /.song__col -->
          
          <div class="song__col">
            <% most_played.each_with_index do |song, ind| %>
              <% if ind > 4 %>
                <%= render partial:  'client/shared/song', locals: {song: song, ind: ind, add_session: true} %>
              <% end %>
            <% end %>
          </div><!-- /.song__col -->
        </div><!-- /.song__cols -->
      </div><!-- /.songs -->
    </div><!-- /.section__body -->
  </div><!-- /.container -->
</div><!-- /.section-ordinary -->

<%= render partial: 'client/shared/list_of_playlists' %>
