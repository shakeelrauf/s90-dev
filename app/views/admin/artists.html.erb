<% content_for :custom_css do %>
  <link rel="stylesheet" type="text/css" href="/files/assets/pages/foo-table/css/footable.bootstrap.min.css">
  <link rel="stylesheet" type="text/css" href="/files/assets/pages/foo-table/css/jquery.dataTables.min.css">
  <link rel="stylesheet" type="text/css" href="/files/assets/pages/foo-table/css/footable.standalone.min.css">
<% end %>

<% content_for :bc do %>
  <%= render partial: "shared/partials/bc",
             locals: { page_title: "Artists", trail: [{:url=>'/ad/artists', :label=>"Artists"}] } %>
<% end %>

<% content_for :content do %>
    <div class="main-body">
        <div class="page-wrapper">
            <!-- Page-body start -->
            <div class="page-body">
                <!-- Filtering Foo-table card start -->
                <div class="card">
                    <div class="card-header">
                      <h5>All of the artists</h5>
                    </div>
                    <div class="card-block">
                        <div id="nestable-menu" class="m-b-10">
                          <button type="button" id="btn-artist-new" class="btn btn-primary btn-round waves-effect waves-light m-b-10 m-r-20" >New artist</button>
                        </div>
                        <table id="table-artists" class="table table-striped">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th>Status</th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                <% @artists.each.with_index do |a,i| %>
                                <tr>
                                    <td><%= i+1 %></td>
                                    <td><a href="/p/p/<%= a.id %>"><%= a.name %></a></td>
                                    <td><span class="tag tag-danger">Active</span></td>
                                    <td>
                                      <button class="btn btn-primary btn-round waves-effect waves-light btn-albums"
                                              data-artist="<%= a.id %>">
                                        Albums
                                      </button>
                                    </td>
                                    <td>
                                      <button class="btn btn-primary btn-round  btn-reinitial" 
                                              data-artist="<%= a.id %>">
                                        Reinitialized Passsword
                                      </button>
                                    </td>
                                </tr>
                                <% end %>
                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- Filtering Foo-table card end -->
            </div>
            <!-- Page-body end -->
        </div>
    </div>

<% end %>


<% content_for :custom_js do %>
  <!--FOO Table js-->
  <script src="/s92/js/pages/ad/artists.js" type="text/javascript" ></script>
  <script src="/files/assets/pages/foo-table/js/footable.min.js"></script>
<% end %>
