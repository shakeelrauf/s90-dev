<% content_for :custom_css do %>
  <link rel="stylesheet" type="text/css" href="/files/assets/pages/foo-table/css/footable.bootstrap.min.css">
  <link rel="stylesheet" type="text/css" href="/files/assets/pages/foo-table/css/jquery.dataTables.min.css">
  <link rel="stylesheet" type="text/css" href="/files/assets/pages/foo-table/css/footable.standalone.min.css">
<% end %>


<% content_for :content do %>
  <div class="main-body">
    <div class="page-wrapper">
      <!-- Page-body start -->
      <div class="page-body">
        <!-- Filtering Foo-table card start -->
        <div class="card card-allRelease">
          <div class="card-header d-flex align-items-sm-center justify-content-between flex-column flex-sm-row">
            <h6 class="mb-3 mb-sm-0 text-uppercase">All of your Compilations</h6>
            <div id="nestable-menu" class="m-b-10">
              <a  id="btn-new-release" href="<%= new_admin_compilation_path %>" class="btn btn-dark waves-effect waves-light w-100">New Compilation</a>
            </div>
          </div>
          <div class="card-body card-body-artists">
            <div class="table-responsive">
              <table id="table-albums" class="table table-dark table-dark-set table-column-six table-albumRelease mb-0">
                <thead>
                  <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Status</th>
                    <th data-breakpoints="xs"></th>
                  </tr>
                </thead>
                <tbody>
                  <% @compilations.each do |c| %>
                  <tr>
                    <td><%= c.id %></td>
                    <td><%= c.title %></td>
                    <td>
                    <%# if a.is_suspended == true %>
                      <!-- <span class="tag tag-danger">In Active</span> -->
                    <%# else %>
                      <span class="tag tag-danger">Active</span>
                    <%# end %>
                    </td>
                    <td>
                   
                      <a class="btn btn-link btn-white" href="<%= admin_compilation_path(c.id ) %>">Details</a>
                    </td>
                    <td>
                      <% if c.is_suspended == false %>
                        <button type="submit" id="btn-suspend-compilation" data-id="<%= c.id %>" class="btn btn-white py-3 px-5 btn-suspend-compilation">Suspend </button>
                      <% else %>
                        <button type="submit" id="btn-suspend-compilation" data-id="<%= c.id %>" class="btn btn-white py-3 px-5 btn-suspend-compilation">Unsuspend </button>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
        <!-- Filtering Foo-table card end -->
      </div>
      <!-- Page-body end -->
    </div>

  </div>
<% end %>

<% content_for :custom_js do %>
  <script src="/files/assets/pages/foo-table/js/footable.min.js"></script>
  <script type="text/javascript" src="/s92/js/pages/compilation/index.js">
 
  </script>
<% end %>
